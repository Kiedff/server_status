!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title ServerStatus
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    = link_to "Home", root_path
    = link_to "Resolved Events", events_path

    
    = link_to "Add Event", new_event_path if can? :create, Event

    = link_to "Log In", new_user_session_path unless current_user
    = link_to "Log Out", destroy_user_session_path, method: :delete if current_user
    %p.notice= notice
    %p.alert= alert
    = yield
